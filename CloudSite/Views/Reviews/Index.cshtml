@model IEnumerable<StudentReviews.Models.Reviews>

@{
    ViewData["Title"] = "Reviews";
}

<h2>Reviews</h2>

<p>
    <a asp-action="Create">Create New Review</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Professor Name</th>
            <th>Review Text</th>
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Course</td>
                <td>@item.Professor</td>
                <td>@item.Comment</td>
                <td>@item.OverallRating</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ReviewId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.ReviewId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReviewId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
