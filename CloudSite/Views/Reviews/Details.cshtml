@model StudentReviews.Models.Reviews

@{
    ViewData["Title"] = "Review Details";
}

<h2>Review Details</h2>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Course Name</dt>
        <dd class="col-sm-10">@Model.Course</dd>

        <dt class="col-sm-2">Professor Name</dt>
        <dd class="col-sm-10">@Model.Professor</dd>

        <dt class="col-sm-2">Review Text</dt>
        <dd class="col-sm-10">@Model.Comment</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.OverallRating</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ReviewId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
